{
    "compilerOptions": {
      "target": "es2018",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "typeRoots": ["./src/types", "./node_modules/@types"],
      "types": ["node", "express"]
    },
    "include": ["src/**/*", "src/types"],
    "exclude": ["node_modules"]
  }
  